/* LED控制行布局 */
.led-control-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.led-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.led-status text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  cursor: pointer;
  transition: color 0.2s ease;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background: rgba(24, 144, 255, 0.05);
  border: 1px solid transparent;
}

.led-status text:active {
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  border-color: rgba(24, 144, 255, 0.2);
  transform: scale(0.95);
}

.led-more::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.led-more:active::before {
  left: 100%;
}

.led-more:active {
  background: linear-gradient(135deg, rgba(255, 64, 129, 0.15), rgba(255, 64, 129, 0.2));
  transform: scale(0.96);
  box-shadow: 0 1rpx 4rpx rgba(255, 64, 129, 0.15);
  border-color: rgba(255, 64, 129, 0.25);
}

.led-more image {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.led-more:active image {
  transform: scale(1.1);
}

