/* 基础容器 */
.container {
  padding: 24rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.header-right {
  display: flex;
  gap: 20rpx;  /* 增加按钮之间的间距 */
}

/* 按钮系统 */
.action-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: white;
  border: none;
  line-height: 1;
  margin: 0;
  width: 160rpx;
  height: 68rpx;
  box-sizing: border-box;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  font-weight: 500;
  background: #1890ff !important; /* 固定蓝色背景 */
}

.action-btn::after {
  display: none;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 连接状态按钮 */
.connection-status {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1;
  margin: 0;
  width: 160rpx;
  height: 68rpx;
  box-sizing: border-box;
  background: white !important; /* 固定白色背景 */
  color: #666 !important; /* 固定文字颜色 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.12);
}

.connection-status.connected .status-dot {
  background-color: #52c41a;
}

.connection-status.connecting .status-dot {
  background-color: #faad14;
  animation: blink 1s infinite;
}

.connection-status.disconnected .status-dot {
  background-color: #ff4d4f;
}

/* 设备卡片容器 */
.cards-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

/* 设备卡片 */
.device-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.device-card.selected {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
}

.device-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #1890ff, #52c41a);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.device-card.selected::after {
  opacity: 1;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.3s ease;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
}

.card-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.card-content {
  display: flex;
  align-items: center;
}

/* 温湿度显示 */
.value {
  font-size: 48rpx;
  font-weight: 600;
  color: #1890ff;
  line-height: 1;
  font-family: "DIN Alternate", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.unit {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
  font-weight: 500;
}

/* 图表区域 */
.chart-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.time-range {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 4rpx;
  border-radius: 12rpx;
  position: relative;
}

.range-btn {
  position: relative;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  flex: 1;
  text-align: center;
  min-width: 120rpx;
}

.range-btn.active {
  color: #1890ff;
  font-weight: 500;
}

.time-range::before {
  content: '';
  position: absolute;
  left: 4rpx;
  top: 4rpx;
  width: calc(50% - 4rpx);
  height: calc(100% - 8rpx);
  background: white;
  border-radius: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.time-range.week::before {
  left: calc(50% + 0rpx);
}

.chart-container {
  width: 100%;
  height: 360rpx;
  position: relative;
}

