<!--微信登录页面-->
<view class="login-container">
  <view class="login-content">
    <!-- Logo区域 -->
    <view class="logo-section">
      <image class="logo" src="/images/device.png" mode="aspectFit"></image>
      <text class="app-name">智慧物联网监控</text>
      <text class="app-desc">基于MQTT协议的物联网设备管理平台</text>
    </view>

    <!-- 功能介绍 -->
    <view class="feature-section">
      <view class="feature-item">
        <image class="feature-icon" src="/images/temperature.png"></image>
        <text class="feature-text">传感器数据监控</text>
      </view>
      <view class="feature-item">
        <image class="feature-icon" src="/images/switch.png"></image>
        <text class="feature-text">设备远程控制</text>
      </view>
     
    </view>

    <!-- 登录按钮 -->
    <view class="login-section">
      <button 
        class="login-btn" 
        bindtap="getUserProfile"
        disabled="{{loading}}"
        loading="{{loading}}"
      >
        <text wx:if="{{!loading}}">微信一键登录</text>
        <text wx:else>登录中...</text>
      </button>
      
      <view class="login-tips">
        <text class="tips-text">登录即表示同意</text>
        <text class="tips-link">《用户协议》</text>
        <text class="tips-text">和</text>
        <text class="tips-link">《隐私政策》</text>
      </view>
    </view>
  </view>
</view>

